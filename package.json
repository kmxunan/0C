{
  "name": "zero-carbon-park",
  "version": "1.0.0",
  "description": "零碳园区数字孪生能碳管理系统",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "start": "node --max-http-header-size=32768 src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest",
    "test:unit": "jest --selectProjects unit",
    "test:integration": "jest --selectProjects integration",
    "test:e2e": "jest --selectProjects e2e",
    "test:api": "node tests/api-integration-test.js",
    "test:pwa": "node tests/pwa-functionality-test.js",
    "test:all": "jest --config jest.enhanced.config.js",
    "test:system": "node test_system.js",
    "test:load": "./load_test.sh",
    "test:coverage": "jest --coverage --config jest.enhanced.config.js",
    "test:watch": "jest --watch --config jest.enhanced.config.js",
    "test:ci": "jest --ci --coverage --watchAll=false --config jest.enhanced.config.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:check": "eslint . --max-warnings 0",
    "lint:enhanced": "eslint . --config .eslintrc.enhanced.cjs",
    "lint:enhanced:fix": "eslint . --config .eslintrc.enhanced.cjs --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "quality:check": "node scripts/quality-check.js",
    "quality:monitor": "node scripts/code-quality-monitor.js",
    "quality:fix": "npm run format && npm run lint:fix",
    "quality:enhanced": "node scripts/enhanced-quality-check.js",
    "quality:enhance": "node scripts/quality-enhancement.js",
    "quality:enhance:test": "node scripts/quality-enhancement.js test",
    "quality:enhance:lint": "node scripts/quality-enhancement.js lint",
    "quality:enhance:security": "node scripts/quality-enhancement.js security",
    "quality:enhance:complexity": "node scripts/quality-enhancement.js complexity",
    "quality:fix:code": "node scripts/code-quality-fixer.js",
    "quality:fix:security": "node scripts/security-fixer.js",
    "quality:optimize:complexity": "node scripts/complexity-optimizer.js",
    "quality:summary": "node scripts/quality-summary.js",
    "quality:full": "npm run quality:fix:code && npm run quality:fix:security && npm run quality:optimize:complexity && npm run quality:summary",
    "type:check": "tsc --noEmit",
    "type:watch": "tsc --noEmit --watch",
    "security:audit": "npm audit --audit-level=moderate",
    "security:fix": "npm audit fix",
    "precommit": "npm run quality:enhanced && npm run type:check",
    "prepare": "husky install",
    "docs:generate": "node scripts/generate-api-docs.js",
    "coverage:analyze": "node scripts/coverage-analyzer.js",
    "deploy:dev": "node scripts/deploy.js deploy development",
    "deploy:staging": "node scripts/deploy.js deploy staging",
    "deploy:prod": "node scripts/deploy.js deploy production",
    "deploy:rollback": "node scripts/deploy.js rollback",
    "deploy:status": "node scripts/deploy.js status",
    "db:migrate": "node scripts/migration-manager.js migrate",
    "db:rollback": "node scripts/migration-manager.js rollback",
    "db:status": "node scripts/migration-manager.js status",
    "db:seed": "node scripts/migration-manager.js seed",
    "db:reset": "node scripts/migration-manager.js reset",
    "db:create": "node scripts/migration-manager.js create",
    "benchmark": "node scripts/benchmark.js",
    "logs:analyze": "node src/shared/utils/LogAggregator.js analyze",
    "env:init": "node scripts/env-manager.js init",
    "env:generate": "node scripts/env-manager.js generate",
    "env:validate": "node scripts/env-manager.js validate",
    "env:switch": "node scripts/env-manager.js switch",
    "env:secret": "node scripts/env-manager.js secret"
  },
  "dependencies": {
    "@react-spring/three": "^10.0.1",
    "@tensorflow/tfjs": "^4.22.0",
    "@tensorflow/tfjs-node": "^4.22.0",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "discord.js": "^14.21.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "ioredis": "^5.6.1",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.0.3",
    "mqtt": "^5.13.1",
    "mysql2": "^3.14.1",
    "node-cache": "^5.1.2",
    "node-fetch": "^3.3.2",
    "nodemailer": "^7.0.4",
    "perf_hooks": "^0.0.1",
    "prom-client": "^15.1.3",
    "puppeteer": "^24.11.0",
    "recharts": "^3.0.2",
    "redis": "^5.5.6",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "twilio": "^5.7.1",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "babel-jest": "^30.0.4",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.6.4",
    "knex": "^3.1.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.3.3"
  }
}
