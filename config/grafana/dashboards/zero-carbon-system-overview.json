{
  "dashboard": {
    "id": null,
    "title": "零碳园区数字孪生系统总览",
    "tags": ["zero-carbon", "overview", "monitoring"],
    "style": "dark",
    "timezone": "Asia/Shanghai",
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
    },
    "templating": {
      "list": [
        {
          "name": "instance",
          "type": "query",
          "query": "label_values(up, instance)",
          "refresh": 1,
          "includeAll": true,
          "multi": true
        }
      ]
    },
    "panels": [
      {
        "id": 1,
        "title": "系统状态总览",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "up",
            "legendFormat": "{{job}} - {{instance}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "green", "value": 1}
              ]
            },
            "mappings": [
              {"options": {"0": {"text": "离线"}, "1": {"text": "在线"}}, "type": "value"}
            ]
          }
        }
      },
      {
        "id": 2,
        "title": "API请求量",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "rate(http_requests_total[5m])",
            "legendFormat": "{{method}} {{handler}}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {"label": "请求/秒", "min": 0},
          {"show": false}
        ]
      },
      {
        "id": 3,
        "title": "响应时间分布",
        "type": "graph",
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 0},
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "50th percentile",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "95th percentile",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "99th percentile",
            "refId": "C"
          }
        ],
        "yAxes": [
          {"label": "响应时间(秒)", "min": 0},
          {"show": false}
        ]
      },
      {
        "id": 4,
        "title": "系统资源使用率",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "100 - (avg by(instance) (irate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
            "legendFormat": "CPU使用率 - {{instance}}",
            "refId": "A"
          },
          {
            "expr": "(1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes)) * 100",
            "legendFormat": "内存使用率 - {{instance}}",
            "refId": "B"
          }
        ],
        "yAxes": [
          {"label": "使用率(%)", "min": 0, "max": 100},
          {"show": false}
        ]
      },
      {
        "id": 5,
        "title": "错误率统计",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "rate(http_requests_total{status=~\"4..\"}[5m])",
            "legendFormat": "4xx错误",
            "refId": "A"
          },
          {
            "expr": "rate(http_requests_total{status=~\"5..\"}[5m])",
            "legendFormat": "5xx错误",
            "refId": "B"
          }
        ],
        "yAxes": [
          {"label": "错误/秒", "min": 0},
          {"show": false}
        ]
      },
      {
        "id": 6,
        "title": "能碳一体化监测指标",
        "type": "graph",
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "energy_consumption_total",
            "legendFormat": "总能耗",
            "refId": "A"
          },
          {
            "expr": "carbon_emissions_total",
            "legendFormat": "总碳排放",
            "refId": "B"
          }
        ],
        "yAxes": [
          {"label": "数值", "min": 0},
          {"show": false}
        ]
      },
      {
        "id": 7,
        "title": "虚拟电厂运营状态",
        "type": "graph",
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 16},
        "targets": [
          {
            "expr": "virtual_power_plant_capacity",
            "legendFormat": "装机容量",
            "refId": "A"
          },
          {
            "expr": "virtual_power_plant_generation",
            "legendFormat": "发电量",
            "refId": "B"
          }
        ],
        "yAxes": [
          {"label": "功率(kW)", "min": 0},
          {"show": false}
        ]
      },
      {
        "id": 8,
        "title": "数据质量评分",
        "type": "stat",
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 16},
        "targets": [
          {
            "expr": "data_quality_score",
            "legendFormat": "数据质量评分",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 0.8},
                {"color": "green", "value": 0.95}
              ]
            },
            "unit": "percentunit",
            "min": 0,
            "max": 1
          }
        }
      },
      {
        "id": 9,
        "title": "实时告警状态",
        "type": "table",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 24},
        "targets": [
          {
            "expr": "ALERTS{alertstate=\"firing\"}",
            "format": "table",
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {"Time": true, "__name__": true},
              "indexByName": {},
              "renameByName": {
                "alertname": "告警名称",
                "severity": "严重程度",
                "instance": "实例",
                "job": "服务"
              }
            }
          }
        ]
      }
    ],
    "annotations": {
      "list": [
        {
          "name": "部署事件",
          "datasource": "prometheus",
          "enable": true,
          "expr": "resets(process_start_time_seconds[1h]) > 0",
          "iconColor": "blue",
          "titleFormat": "服务重启",
          "textFormat": "{{job}} 在 {{instance}} 重启"
        }
      ]
    },
    "links": [
      {
        "title": "Prometheus",
        "url": "http://prometheus:9090",
        "type": "link"
      },
      {
        "title": "AlertManager",
        "url": "http://alertmanager:9093",
        "type": "link"
      }
    ]
  }
}