NODE_ENV=test

# 测试数据库配置
DB_PATH=./data/test.db

# JWT配置
JWT_SECRET=test-jwt-secret-key-for-testing
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=1d

# MQTT配置（测试环境可选）
MQTT_BROKER_URL=mqtt://localhost:1883
MQTT_USERNAME=
MQTT_PASSWORD=

# 日志配置
LOG_LEVEL=error
LOG_FILE=./logs/test.log

# 禁用外部服务
ENABLE_EXTERNAL_SERVICES=false
ALERT_EMAIL_ENABLED=false
ALERT_SMS_ENABLED=false
ALERT_DISCORD_ENABLED=false

# 测试环境特定配置
DEV_ENABLE_MOCK_DATA=true
DEV_ENABLE_DEBUG_ROUTES=false
DEV_ENABLE_SQL_LOGGING=false

# Redis配置（测试环境禁用）
REDIS_ENABLED=false

# 安全配置（测试环境简化）
SECURITY_CORS_ENABLED=true
SECURITY_RATE_LIMIT_ENABLED=false
SECURITY_HELMET_ENABLED=false
SECURITY_CSRF_ENABLED=false